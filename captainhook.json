{
    "commit-msg": {
        "enabled": true,
        "actions": [
            {
                "action": "\\CaptainHook\\App\\Hook\\Message\\Action\\Regex",
                "options": {
                    "regex": "#.*#"
                }
            }
        ]
    },
    "pre-push": {
        "enabled": true,
        "actions": [{
            "action": "composer cs:check && composer phpstan",
            "options": []

        }]
    },
    "pre-commit": {
        "enabled": true,
        "actions": [
            {
                "action": "composer cs:fix && composer phpstan",
                "options": []
            }
        ]
    }
}
